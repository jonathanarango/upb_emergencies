	<body>	
		<script type="text/javascript">
		  // This function is to display fqas answers
			function show_answer(answer)
			{
			  $('document').ready(function(){
			    $('#'+answer).toggle('blind');
			  });
			}

			$('document').ready(function(){
					height = $(document).height();
					width = $(document).width();
			    $('.modal-body').css("max-height",height-(height*0.46));
			    $('.modal').css("margin-top",-height/2.9);
			    $('.modal').css("margin-left",-width/3.1);
			});
		</script>			
		<div class="navbar" style="min-width: 900px;">
	    	<div class="navbar-inner">
	    		<div class="nav-collapse collapse">
	      			<ul style="margin-top: -27px;" class="nav li_navbar"><%= render :partial => 'partials/private_navbar' %></ul>
	      			<div style="text-align: right; margin-top: 27px; font-size: 15px;">
						<%= current_system_user.name + " " + current_system_user.last_name %>|
						<a style="color: black;" href="<%= destroy_system_user_session_path %>">Cerrar Sesi√≥n</a>
					</div>
	      		</div>
	    	</div>
	  	</div>
