<div class="row-fluid" >
	<div class="width: 100%;">
		<% if !devise_error_messages!.blank? %>
			<div class="alert alert-error">
					<a class="close" data-dismiss="alert">×</a>  
					<%= devise_error_messages! %>	
			</div>
		<% end %>
		<div class="section_content"><br>	
		<div style="margin-top:-20px;"><h4>Crear cuenta</h4></div>	
		<hr>		
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				<!-- NAME -->
				<div class="control-group">
				    <%= f.label "Nombre"+'*', :class => "control-label"  %>
				    <div class="controls">
				    	<%= f.text_field :name, :class => 'span3' %>
				    </div>
			  </div>
			  <!-- LAST-NAME -->
				<div class="control-group">
				    <%= f.label "Apellido"+'*', :class => "control-label"  %>
				    <div class="controls">
				    	<%= f.text_field :last_name, :class => 'span3' %>
				    </div>
			  </div>
			  <!-- EMAIL -->
				<div class="control-group">
				    <%= f.label "Email"+'*', :class => "control-label"  %>
				    <div class="controls">
				    	<%= f.email_field :email, :class => 'span3' %>
				    </div>
			  </div>
			  <!-- PHONE -->
				<div class="control-group">
				    <%= f.label "Teléfono", :class => "control-label"  %>
				    <div class="controls">
				    	<%= f.text_field :phone, :class => 'span3' %>
				    </div>
			  </div>
			  <!-- CELL-PHONE -->
				<div class="control-group">
				    <%= f.label "Celular", :class => "control-label"  %>
				    <div class="controls">
				    	<%= f.text_field :cellphone, :class => 'span3' %>
				    </div>
			  </div>
			   <!-- PROFILE -->
				<div class="control-group">
				    <%= f.label "Perfil", :class => "control-label"  %>
				    <div class="controls">
				    	<%= f.select :profile_id, @profiles %>
				    </div>
			  </div>
			  <!-- PASSWORD -->
				<div class="control-group">
				    <%= f.label "Contraseña"+'*', :class => "control-label"  %>
				    <div class="controls">
				    	<%= f.password_field :password, :class => 'span3' %>
				    </div>
			  </div>
			  <!-- CONFIRM-PASSWORD -->
				<div class="control-group">
				    <%= f.label "Confirmar contraseña"+'*', :class => "control-label"  %>
				    <div class="controls">
				    	<%= f.password_field :password_confirmation, :class => 'span3' %>
				    </div>
			  </div>
			  <!-- ACTIVATION-CODE -->
				<div class="control-group">
				    <%= f.label "Código de activación"+'*', :class => "control-label"  %>
				    <div class="controls">
				    	<%= f.text_field :code, :class => 'span3' %>
				    </div>
			  </div>
			  <!-- BUTTONS -->
				<div class="control-group">
		    	<div class="controls">
		 				<%= f.submit "Crear cuenta", :class => "btn btn-primary", :disable_with => "Creando" %>
		 			</div>
			 	</div>
			<% end %>
		</div>
	</div>
</div>	