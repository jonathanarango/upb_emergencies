<div class="row-fluid" style="margin-top: -30px;">
	<div style="padding-bottom: 10px;"><h3>¿Olvidate tu contraseña?</h3></div>
	<div style="" ="width: 100%;">
		<% if devise_error_messages!.to_s != "" %>
			<div class="alert alert-error">
				<a class="close" data-dismiss="alert">×</a>
				<%= devise_error_messages! %>
			</div>
		<% end %>	
		<div class="section_content"><br>	
			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
				<!-- EMAIL -->
				<div class="control-group">
				  <%= f.label "Email"+'*', :class => "control-label"  %>
				  <div class="controls">
				  	<%= f.email_field :email, :class => 'span3' %>
				  </div>
			 	</div>
			 	<!-- BUTTONS -->
				<div class="control-group">
		    	<div class="controls">
		 				<%= f.submit "Enviarme instrucciones de cambio de contraseña", :disable_with => "Enviando", :class => "btn btn-primary" %>
		 			</div>
			 	</div>
			<% end %>
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
